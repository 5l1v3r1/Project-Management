@model PM.Web.Administration.Task.ListViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<!-- LEFT MENU -->
@Html.Partial("_LeftMenuBar", Model.ProjectId)

<!-- ADD NEW TASK MODAL -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <!-- MODAL HEADER -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New Task</h4>
            </div>

            <!-- MODAL BODY -->
            <div class="modal-body">
                <div class="create-task">

                    <div class="form-group">
                        <label for="task-title" class="">Title</label>
                        <input type="text" id="task-title" class="form-control" placeholder="Enter task title">
                    </div>

                    <div class="form-group">
                        <label for="task-description">Description</label>
                        <textarea rows="4" id="task-description" class="form-control" placeholder="Enter task description"></textarea>
                    </div>

                    <!-- DROPDOWNS -->
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-assignee">Assigne to</label>
                                <select id="task-assignee" class="form-control">
                                    <option>ksterle</option>
                                    <option>jdoe</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-priority">Priority</label>
                                <select id="task-priority" class="form-control">
                                    <option>Low</option>
                                    <option>Normal</option>
                                    <option>High</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-doudate">Dou Date</label>
                                <input id="task-doudate" class="form-control" data-toggle="datepicker" placeholder="mm/dd/yyyy">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- MODAL FOOTER -->
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Create Task</button>
            </div>

        </div>
    </div>
</div>

<!-- PAGE -->
<div class="page">

    <div class="page-content-header">

        <span class="breadcrumbs">
            @Html.ActionLink("Home", "Index", "Dashboard", null, null) /
            @Html.ActionLink(Model.ProjectName, "Overview", "Project", new { pId = PM.Common.ShortGuid.Encode(Model.ProjectId) }, null) /
            <span>Tasks</span>
        </span>

        <div class="header-content-right">
            <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#myModal" data-backdrop="static">Add New</button>
        </div>
    </div>

    <div class="page-content">

        <!-- TASK LIST -->
        <div id ="tasks-list" class="col-md-9">
           @Html.Partial("_TasksList", Model.Tasks)
        </div>

        <!-- Filtering widget -->
        <div class="col-md-3">
            <div class="widget">
                <div class="tasks-filter">

                    <input type="text" class="form-control" placeholder="Search">
                    <br />

                    <p>Status</p>
                    <select class="form-control">
                        <option>All</option>
                        <option>New</option>
                        <option>In progress</option>
                        <option>Resolved</option>
                    </select>

                    <br />
                    <p>Priority</p>
                    <select class="form-control">
                        <option>All</option>
                        <option>Low</option>
                        <option>Normal</option>
                        <option>High</option>
                    </select>

                    <br />
                    <p>Assigne to</p>
                    <select class="form-control">
                        <option>All</option>
                        <option>ksterle</option>
                        <option>jdoe</option>
                    </select>

                </div>

            </div>
        </div>

    </div>

</div>