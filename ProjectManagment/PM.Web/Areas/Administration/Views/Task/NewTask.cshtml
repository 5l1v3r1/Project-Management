@model CreateTaskViewModel

@{
    ViewBag.Title = "NewTask";
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> New Task</h3>

<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Task Details</h4>

            @using (Html.BeginForm("NewTask", "Task", FormMethod.Post, new { @class = "form-horizontal style-form" }))
            {
                @Html.HiddenFor(vm => vm.ProjectId)

                <div class="form-group">
                    @Html.LabelFor(vm => vm.Name, "Name", new { @class = "col-sm-2 col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(vm => vm.Name, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(vm => vm.Description, "Description", new { @class = "col-sm-2 col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(vm => vm.Description, new { @class = "form-control" })
                    </div>
                </div>

                <button type="submit" class="btn btn-theme">Create</button>
                @Html.ActionLink("Cancel", "Projects", "Project", new { area = "Administration" }, new { @class = "btn btn-warning" })
            }

        </div>
    </div>
</div>
