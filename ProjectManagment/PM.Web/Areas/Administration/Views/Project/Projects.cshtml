
@{
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Projects";
}

<!-- LEFT MENU -->
@Html.Partial("_LeftMenuBar", Guid.Empty)

<!-- ADD NEW TASK MODAL -->
<div class="modal fade" id="new-project-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <!-- MODAL HEADER -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add New Project</h4>
            </div>

            <!-- MODAL BODY -->
            <div class="modal-body">
                <div class="create-task">

                    <div class="form-group">
                        <label for="task-title" class="">Title</label>
                        <input type="text" id="task-title" class="form-control" placeholder="Enter project title">
                    </div>

                    <div class="form-group">
                        <label for="task-description">Description</label>
                        <textarea rows="4" id="task-description" class="form-control" placeholder="Enter project description"></textarea>
                    </div>

                    <!-- DROPDOWNS -->
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-assignee">Assigne to</label>
                                <select id="task-assignee" class="form-control">
                                    <option>ksterle</option>
                                    <option>jdoe</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-priority">Priority</label>
                                <select id="task-priority" class="form-control">
                                    <option>Low</option>
                                    <option>Normal</option>
                                    <option>High</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="task-doudate">Dou Date</label>
                                <input id="task-doudate" class="form-control" data-toggle="datepicker" placeholder="mm/dd/yyyy">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- MODAL FOOTER -->
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success">Create Task</button>
            </div>

        </div>
    </div>
</div>

<!-- PAGE -->
<div class="page">

    <div class="page-content-header">

        <span class="breadcrumbs">
            @Html.ActionLink("Home", "Index", "Dashboard", null, null) /
            <span>Projects</span>
        </span>

        <div class="header-content-right">
            <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#new-project-modal" data-backdrop="static">Add New</button>                
        </div>
    </div>

    <div class="page-content">

        <div class="col-md-3">
            <div class="widget">
                <div class="block block-project">
                    <a href="javascript:void(0);" class="profile-link"><h3>Ksterle - Project1</h3></a>
                </div>
                <div class="block block-team text-center">
                    <ul>
                        <li>
                            <img class="img-avatar img-sm" src="http://i.pravatar.cc/300" alt="">
                        </li>
                        <li>
                            <img class="img-avatar img-sm" src="http://i.pravatar.cc/300" alt="">
                        </li>
                       
                    </ul>
                </div>

                <div class="block block-profile-footer">
                    <div class="row text-center">
                        <div class="col-xs-4">
                            <a href="javascript:void(0);" class="profile-link">
                                <h3>254</h3>
                                <h5>Tasks</h5>
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <a href="javascript:void(0);" class="profile-link">
                                <h3>176</h3>
                                <h5>Completed</h5>
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <a href="javascript:void(0);" class="profile-link profile-late">
                                <h3>16</h3>
                                <h5>Late</h5>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
                
