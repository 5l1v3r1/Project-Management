@model IList<ProjectViewModel>
@{
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Projects";
}



<div class="col-lg-12" style="padding:0px;">
  
                <ul class="pricing-table dark" contenteditable>
                    @foreach (var project in Model)
                    {
                        <li class="col-lg-2">
                            <h4>@project.Name</h4>
                            <div class="price-body">
                                <div class="price">
                                    30%
                                </div>
                            </div>
                            <div class="features">
                                <ul>
                                    <li>Total tasks: 127</li>
                                    <li>Completed tasks: 45</li>
                                    <li style="color: red">Late: 4</li>
                                </ul>
                            </div>
                            <div class="footer">
                                @Html.ActionLink("Open Project", "Project", "Project", new { area = "Administration", projectId = project.Id }, new { @class = "btn btn-info btn-rect" })
                            </div>
                        </li>
                    }
                    <div class="clearfix"></div>
                </ul>

                @Html.ActionLink("New Project", "NewProject", "Project", new { area = "Administration" }, new { @class = "btn btn-theme03" })

          
</div>





